<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back_texture"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="22dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/log_reg_shop_back"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, \n Step into the World of Magic!"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toRightOf="@+id/line3"
        app:layout_constraintRight_toLeftOf="@+id/line5"
        app:layout_constraintBottom_toTopOf="@+id/lineBotoomTextMain"
        android:fontFamily="@font/lusitana_bold"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="326dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/butterflies_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/line4"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="12dp" />

    <EditText
        android:id="@+id/logInEmail"
        android:layout_width="0dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="@id/line3"
        app:layout_constraintEnd_toEndOf="@id/line5"
        app:layout_constraintTop_toTopOf="@id/lineTopLogIn"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/lusitana_regular"
        android:padding="10dp"
        android:hint="Enter your magical email"
        ></EditText>

    <EditText
        android:id="@+id/logInPassword"
        android:layout_width="0dp"
        android:layout_height="57dp"
        app:layout_constraintStart_toStartOf="@id/line3"
        app:layout_constraintEnd_toEndOf="@id/line5"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/logInEmail"
        android:fontFamily="@font/lusitana_regular"
        android:background="@drawable/edittext_border"
        android:padding="10dp"
        android:hint="Share the secret password"
        ></EditText>

    <ImageView
        android:id="@+id/gmailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gmail_icon"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="610dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/LogInBut"
        app:layout_constraintLeft_toLeftOf="@+id/line3"/>

    <ImageView
        android:id="@+id/facebookView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/facebook_icon"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="610dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/LogInBut"
        app:layout_constraintLeft_toRightOf="@+id/gmailView"/>

    <TextView
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        app:layout_constraintTop_toBottomOf="@id/logInPassword"
        app:layout_constraintLeft_toLeftOf="@+id/line3"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="506dp"
        android:fontFamily="@font/lusitana_regular"
        />

    <TextView
        android:id="@+id/regIfNoLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member of our coven? Register!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/line3"
        app:layout_constraintRight_toRightOf="@id/line5"
        android:layout_marginBottom="30dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="506dp"
        android:fontFamily="@font/lusitana_regular"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LogInBut"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:text="LogIn"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lusitana_bold"
        app:layout_constraintStart_toStartOf="@id/line3"
        app:layout_constraintEnd_toEndOf="@id/line5"
        app:layout_constraintTop_toBottomOf="@+id/forgotPass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></androidx.appcompat.widget.AppCompatButton>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="296dp"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="641dp"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.79"></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineTopLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="315dp"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineBotoomTextMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"></androidx.constraintlayout.widget.Guideline>



</androidx.constraintlayout.widget.ConstraintLayout>